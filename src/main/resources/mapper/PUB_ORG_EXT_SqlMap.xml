<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winning.isc.dao.PubOrgExtDao">

    <resultMap id="pubOrgExtResultForList" type="com.winning.isc.model.PubOrgExt">
         <result column="ORG_ID" property="orgId" jdbcType="BIGINT" />
         <result column="ORG_NAME" property="orgName" jdbcType="VARCHAR" />
         <result column="ORG_CODE" property="orgCode" jdbcType="VARCHAR" />
         <result column="ORG_NAME_EXT" property="orgNameExt" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="pubOrgExtResult" type="com.winning.isc.model.PubOrgExt" extends="pubOrgExtResultForList">

    </resultMap>

    <sql id="sql-pubOrgExt">
        <if test="(orgId != null )"> and t.ORG_ID = #{orgId} </if>
        <if test="(orgName != null )"> and t.ORG_NAME = #{orgName} </if>
        <if test="(orgCode != null )"> and t.ORG_CODE = #{orgCode} </if>
        <if test="(orgNameExt != null )"> and t.ORG_NAME_EXT = #{orgNameExt} </if>
    </sql>

    <insert id="insertPubOrgExt" parameterType="com.winning.isc.model.PubOrgExt">
        <selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
        INSERT INTO PUB_ORG_EXT
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(orgId != null )"> ORG_ID , </if>
            <if test="(orgName != null )"> ORG_NAME , </if>
            <if test="(orgCode != null )"> ORG_CODE , </if>
            <if test="(orgNameExt != null )"> ORG_NAME_EXT , </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(orgId != null )">#{orgId , jdbcType= BIGINT },  </if>
            <if test="(orgName != null )">#{orgName , jdbcType= VARCHAR },  </if>
            <if test="(orgCode != null )">#{orgCode , jdbcType= VARCHAR },  </if>
            <if test="(orgNameExt != null )">#{orgNameExt , jdbcType= VARCHAR },  </if>
        </trim>
    </insert>

    <update id="updatePubOrgExt" parameterType="com.winning.isc.model.PubOrgExt">
        UPDATE PUB_ORG_EXT
        <set>
            <trim suffixOverrides=",">
                <if test="(orgId != null )"> ORG_ID = #{orgId , jdbcType= BIGINT }, </if>
                <if test="(orgName != null )"> ORG_NAME = #{orgName , jdbcType= VARCHAR }, </if>
                <if test="(orgCode != null )"> ORG_CODE = #{orgCode , jdbcType= VARCHAR }, </if>
                <if test="(orgNameExt != null )"> ORG_NAME_EXT = #{orgNameExt , jdbcType= VARCHAR }, </if>
            </trim>
        </set>
        <where>
            <if test="(orgId != null )"> and ORG_ID = #{ orgId, jdbcType= BIGINT }   </if>-->
            <if test="(orgId !=null ) and (map.pks != null and map.size > 0)">
                and (ORG_ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </update>

    <delete id="deletePubOrgExt" parameterType="com.winning.isc.model.PubOrgExt">
        delete from  PUB_ORG_EXT
        <where>
        <if test="(orgId != null )"> and ORG_ID = #{ orgId }   </if>
            <if test="(orgId !=null ) and (map.pks != null and map.size > 0)">
                and (ORG_ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </delete>


    <select id="selectPubOrgExt" resultMap="pubOrgExtResult" parameterType="com.winning.isc.model.PubOrgExt">
        SELECT * FROM PUB_ORG_EXT t
        <where>
            <include refid="sql-pubOrgExt" />
        </where>
    </select>

    <select id="selectPubOrgExtList" resultMap="pubOrgExtResultForList" parameterType="com.winning.isc.model.PubOrgExt">
        SELECT
        <if test="row.count != null and row.count != ''"> top ${row.count} </if>
        * FROM PUB_ORG_EXT t
        <where>
            <include refid="sql-pubOrgExt" />
        </where>
        ORDER BY t.ORG_ID ASC
    </select>

    <select id="selectPubOrgExtCount" resultType="int" parameterType="com.winning.isc.model.PubOrgExt">
        select count(1) from  PUB_ORG_EXT t
        <where>
            <include refid="sql-pubOrgExt" />
        </where>
    </select>

    <select id="selectPubOrgExtPageList" resultMap="pubOrgExtResult" parameterType="com.winning.isc.model.PubOrgExt">
        SELECT * FROM (
        SELECT t.* ,
        ROW_NUMBER() OVER ( ORDER BY t.ORG_ID DESC ) AS _RN
        FROM PUB_ORG_EXT t
        <where>
            <include refid="sql-pubOrgExt" />
        </where>
        <!-- order by t.ORG_ID asc -->
        ) TEMP_TABLE WHERE _RN BETWEEN  #{row.first} + 1 AND #{row.first} + #{row.count}
    </select>

    <select id="insertPubOrgExtByProc"  statementType="CALLABLE">
        exec USP_PUB_ORG_NAME_EXT_DATA
    </select>


</mapper>